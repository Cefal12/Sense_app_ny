<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:maxHeight="135dp"
            android:maxWidth="135dp"
            android:paddingRight="10dp"
            android:src="@drawable/sense"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintTop_toBottomOf="@+id/date" />

        <TextView
            android:id="@+id/hf12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintTop_toBottomOf="@+id/mma" />

        <TextView
            android:id="@+id/hf3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintTop_toBottomOf="@+id/hf12" />

        <TextView
            android:id="@+id/hf4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintTop_toBottomOf="@+id/hf3" />

        <TextView
            android:id="@+id/fedt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintTop_toBottomOf="@+id/hf4" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>